{
	"manifest_version": 3,
	"name": "Better Linear Integration",
	"version": "1.0",
	"description": "Better Linear to Gitlab MR Integration ",
	"host_permissions": ["https://ajax.googleapis.com/"],
	"permissions": ["activeTab", "storage"],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["src/script.js"],
			"css": ["src/style.css"],
			"nonce": "jo7Idaj2143rDAMw131goia61jodjao793",
			"run_at": "document_end"
		}
	],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "src/popup/popup.html"
	}
}
